<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_child_rv_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="20sp"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/iv_child1_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_child1_title"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="my name "
        android:textSize="12sp"
        android:fontFamily="@font/google_sans_regular"
        app:layout_constraintTop_toBottomOf="@id/cv_child_rv_image"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_child1_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_child1_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:fontFamily="@font/google_sans_regular"
        android:text="4.6"/>
    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/baseline_star_24"
        app:layout_constraintTop_toBottomOf="@id/tv_child1_title"
        app:layout_constraintStart_toEndOf="@id/tv_child1_rating"
        android:layout_marginTop="8dp"
        android:layout_marginStart="1dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>